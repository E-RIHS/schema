{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://e-rihs.io/schema/generic_research_focus-v1.0.schema.json",
    "$code": "04c7",
    "title": "Generic research focus description",
    "type": "object",
    "required": ["label"],
    "properties": {
        "$schema": {
            "type": "string",
            "options": {
                "hidden": true
            }
        },
        "id": {
            "type": "string",
            "cordra": {
                "type": {
                    "autoGeneratedField": "handle"
                }
            }
        },
        "label": {
            "title": "Label",
            "description": "A short label for the research focus",
            "type": "string",
            "minLength": 3,
            "maxLength": 150,
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "isPrimary": true
                }
            }
        },
        "alternative_ids": {
            "title": "Alternative IDs",
            "description": "Alternative IDs for the research focus",
            "type": "array",
            "items": {
                "title": "Alternative ID",
                "type": "object",
                "required": ["id", "is_url"],
                "properties": {
                    "id": {
                        "title": "ID",
                        "description": "An alternative ID for the research focus",
                        "type": "string"
                    },
                    "is_url": {
                        "title": "Is this a URL?",
                        "type": "boolean"
                    }
                }
            }
        },
        "description": {
            "title": "Description",
            "description": "A longer description of the research focus",
            "type": "string",
            "minLength": 100,
            "maxLength": 1500,
            "format": "textarea"
        },
        "location": {
            "title": "Location",
            "description": "The location of the object (as a free text)",
            "type": "string"
        },
        "location_geonames": {
            "title": "Location (Geonames ID)",
            "description": "The location of the object (as a Geonames URL)",
            "type": "string",
            "format": "uri"
        },
        "owner": {
            "title": "Owner",
            "description": "The owner of the object",
            "type": "string",
            "cordra": {
                "type": {
                    "handleReference": {
                        "types": ["Person", "Organisation"]
                    }
                }
            }
        }
    }
}

