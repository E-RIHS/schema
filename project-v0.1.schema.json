{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://e-rihs.io/schema/project-v0.1.schema.json",
    "title": "E-RIHS access project",
    "type": "object",
    "properties": {
        "$schema": {
            "type": "string",
            "const": "https://e-rihs.io/schema/project-v0.1.schema.json"
        },
        "id": {
            "title": "Id",
            "description": "Project ID",
            "type": "string"
        },
        "title": {
            "title": "Title",
            "description": "Project title",
            "type": "string",
            "minLength": 3,
            "maxLength": 100
        },
        "version": {
            "title": "Version",
            "description": "Project version",
            "type": "number"
        },
        "summary": {
            "title": "Summary",
            "description": "Project summary, including the novelty and/or added value of the proposed work",
            "type": "string",
            "minLength": 100,
            "maxLength": 1500,
            "x-display": "markdown"
        },
        "research_questions": {
            "title": "Research questions",
            "description": "Detailed description, structured as series of pieces of information which relate to the purpose and context of the project",
            "type": "array",
            "minItems": 1,
            "items": {
                "title": "Research question",
                "type": "object",
                "properties": {
                    "scientific_background": {
                        "title": "Scientific background",
                        "type": "string",
                        "minLength": 100,
                        "maxLength": 1500,
                        "x-display": "markdown"
                    },
                    "description": {
                        "title": "Description of the work",
                        "description": "The experimental technique(s) requested with justification, required set-up(s), measurement strategy, sampling area/point details (number, location, etc.)",
                        "type": "string",
                        "minLength": 100,
                        "maxLength": 3000,
                        "x-display": "markdown"
                    },
                    "expected_achievements": {
                        "title": "Expected achievements",
                        "type": "string",
                        "minLength": 100,
                        "maxLength": 2000,
                        "x-display": "markdown"
                    },
                    "impact_plan": {
                        "title": "Impact plan",
                        "type": "string",
                        "x-display": "markdown"
                    },
                    "references": {
                        "title": "References",
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "previous_relavant_analysis": {
                        "title": "Previous relevant analysis",
                        "type": "array",
                        "items": {
                            "type": "string",
                            "minLength": 100,
                            "maxLength": 1500,
                            "x-display": "markdown"
                        }
                    }
                },
                "required": [
                    "scientific_background",
                    "description",
                    "expected_achievements",
                    "impact_plan"
                ]
            }
        },
        "objects": {
            "title": "Objects and archives",
            "type": "array",
            "items": {
                "title": "Object/archive ID",
                "type": "string"
            }
        },
        "proposed_services": {
            "title": "E-RIHS services",
            "type": "array",
            "items": {
                "title": "Service ID",
                "type": "string"
            }
        },
        "period": {
            "title": "Period",
            "description": "Time span in which the project should be carried out??",
            "type": "object",
            "properties": {
                "start_date": {
                    "title": "Start date",
                    "type": "string",
                    "format": "date"
                },
                "end_date": {
                    "title": "End date",
                    "type": "string",
                    "format": "date"
                }
            }
        },
        "participants": {
            "title": "Participants",
            "type": "array",
            "minLength": 1,
            "items": {
                "title": "Participant",
                "type": "object",
                "properties": {
                    "orcid": {
                        "title": "Participant ORCID",
                        "type": "string"
                    },
                    "roles": {
                        "title": "Roles",
                        "type": "array",
                        "items": {
                            "title": "Role",
                            "enum": [
                                "Principal investigator",
                                "Project member"
                            ],
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "orcid"
                ]
            }
        },
        "state": {
            "title": "State",
            "description": "Project state",
            "type": "string",
            "enum": [
                "draft document (wd:Q560361)",
                "submitted / proposal (wd:Q3918409)",
                "accepted",
                "revision requested",
                "declined"
            ],
            "default": "draft document (wd:Q560361)"
        },
        "assessment": {
            "title": "Assessment",
            "type": "string",
            "maxLength": 2000,
            "x-display": "markdown"
        },
        "creation_timestamp": {
            "title": "Creation date",
            "type": "string",
            "format": "date-time"
        },
        "creator": {
            "title": "Creator",
            "type": "string"
        }
    },
    "required": [
        "$schema",
        "title",
        "summary",
        "research_questions",
        "participants"
    ]
}
