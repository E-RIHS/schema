{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://e-rihs.io/schema/catalogue_proposal-v1.0.schema.json",
    "$code": "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
    "title": "Catalogue Proposal",
    "type": "object",
    "required": ["label", "submitted_by", "proposed_catalogue", "proposed_services", "justification"],
    "properties": {
        "$schema": {
            "type": "string",
            "options": {
                "hidden": true
            }
        },
        "id": {
            "type": "string",
            "cordra": {
                "type": {
                    "autoGeneratedField": "handle"
                }
            }
        },
        "label": {
            "type": "string",
            "title": "Label",
            "minLength": 3,
            "maxLength": 100,
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "isPrimary": true
                }
            }
        },
        "submitted_by": {
            "title": "Submitted by",
            "description": "The person that submitted the proposal",
            "type": "string",
            "cordra": {
                "type": {
                    "handleReference": {
                        "types": ["Person"]
                    }
                }
            } 
        },
        "seconded_by": {
            "title": "Seconded by",
            "description": "The person that seconded the proposal",
            "type": "string",
            "cordra": {
                "type": {
                    "handleReference": {
                        "types": ["Person", "Organisation"]
                    }
                }
            }
        },
        "justification": {
            "title": "Justification",
            "description": "Why should the services be added to the catalogue?",
            "type": "string",
            "format": "textarea",
            "minLength": 1
        },
        "proposed_catalogue": {
            "title": "Proposed Catalogue",
            "description": "The catalogue in which you propose to add the service(s)",
            "type": "string",
            "cordra": {
                "type": {
                    "handleReference": {
                        "types": ["Catalogue"]
                    }
                }
            }
        },
        "proposed_services": {
            "title": "Proposed Services",
            "description": "The services that you propose to add to the catalogue",
            "minItems": 1,
            "type": "array",
            "items": {
                "title": "Proposed Service",
                "type": "string",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": ["Service"]
                        }
                    }
                }
            }
        },
        "status": {
            "title": "Status",
            "description": "The status of the proposal",
            "type": "string",
            "enum": ["Submitted", "In Progress", "Updated", "Accepted", "Rejected"],
            "cordra": {
                "preview": {
                    "showInPreview": true
                }
            }
        },
        "feedback": {
            "title": "Feedback",
            "description": "Feedback from the proposal",
            "type": "string",
            "format": "textarea"
        },
        "submitted_date": {
            "title": "Submitted Date",
            "description": "When was the proposal submitted",
            "type": "string",
            "format": "date",
            "cordra": {
                "preview": {
                    "showInPreview": true
                }
            }
        },
        "updated_date": {
            "title": "Updated Date",
            "description": "When was the proposal updated",
            "type": "string",
            "format": "date"
        }
    }
}