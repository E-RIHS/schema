{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://e-rihs.io/schema/cordragroup-v1.0.schema.json",
    "$code": "c9ce",
    "title": "CordraGroup",
    "type": "object",
    "required": ["id", "groupName", "description"],
    "properties": {
        "id": {
            "type": "string",
            "cordra": {
                "type": {
                    "autoGeneratedField": "handle"
                }
            }
        },
        "groupName": {
            "type": "string",
            "title": "Group Name",
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "isPrimary": true
                }
            }
        },
        "description": {
            "type": "string",
            "format": "textarea",
            "maxLength": 2048,
            "title": "Description",
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "excludeTitle": true
                }
            }
        },
        "users": {
            "type": "array",
            "format": "table",
            "title": "Users",
            "uniqueItems": true,
            "items": {
                "type": "string",
                "title": "User",
                "cordra": {
                    "type": {
                        "handleReference": {
                            "types": ["CordraUser", "CordraGroup"]
                        }
                    }
                }
            },
            "cordra": {
                "auth": "usersList"
            }
        }
    }
}
