{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://e-rihs.io/schema/kpi-v1.0.schema.json",
    "$code": "6530",
    "title": "E-RIHS KPI",
    "type": "object",
    "required": ["id", "title", "kpi_definition", "date_range", "metrics"],
    "properties": {
        "$schema": {
            "type": "string",
            "options": {
                "hidden": true
            }
        },
        "id": {
            "type": "string",
            "cordra": {
                "type": {
                    "autoGeneratedField": "handle"
                }
            }
        },
        "title": {
            "title": "Title",
            "type": "string",
            "minLength": 2,
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "isPrimary": true
                }
            }
        },
        "kpi_definition": {
            "title": "KPI definition",
            "type": "string",
            "minLength": 2,
            "description": "E-RIHS PID of the KPI definition that is used for this KPI.",
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "excludeTitle": true
                },
                "type": {
                    "handleReference": {
                        "types": ["KPI definition"],
                        "name": "{{../title}}"
                    }
                }
            }
        },
        "date_range": {
            "title": "Date range",
            "type": "object",
            "description": "The date range the KPI is relevant to.",
            "required": ["start_date", "end_date"],
            "properties": {
                "start_date": {
                    "title": "Start date and time",
                    "type": "string",
                    "format": "datetime-local",
                    "description": "The start date of the date range the KPI is relevant to."
                },
                "end_date": {
                    "title": "End date and time",
                    "type": "string",
                    "format": "datetime-local",
                    "description": "The end date of the date range the KPI is relevant to."
                }
            }
        },
        "metrics": {
            "title": "Metrics",
            "type": "array",
            "description": "Measured metrics for the KPI.",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": ["key", "value", "met_target"],
                "properties": {
                    "key": {
                        "title": "Key",
                        "type": "string",
                        "minLength": 2,
                        "description": "The key of the metric"
                    },
                    "value": {
                        "title": "Value",
                        "type": ["number", "string", "boolean"],
                        "description": "The value of the metric"
                    },
                    "unit": {
                        "title": "Unit",
                        "type": "string",
                        "description": "The unit of the target metric"
                    },
                    "met_target": {
                        "title": "Met target",
                        "type": "boolean",
                        "description": "Whether the target for the metric was met"
                    }
                }
            }
        }
    }
}
