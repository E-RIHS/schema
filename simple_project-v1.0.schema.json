{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://e-rihs.io/schema/simple_project-v1.0.schema.json",
    "$code": "06de",
    "title": "Simple project",
    "type": "object",
    "required": [
        "title",
        "class",
        "summary",
        "project_description",
        "links",
        "contacts"
    ],
    "properties": {
        "$schema": {
            "type": "string",
            "options": {
                "hidden": true
            }
        },
        "id": {
            "type": "string",
            "cordra": {
                "type": {
                    "autoGeneratedField": "handle"
                }
            }
        },
        "title": {
            "title": "Title",
            "description": "Project title",
            "type": "string",
            "minLength": 3,
            "maxLength": 150,
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "isPrimary": true
                }
            }
        },
        "summary": {
            "title": "Project Summary",
            "description": "A brief description of the projects, including the key activities",
            "type": "string",
            "minLength": 100,
            "maxLength": 300
        },
        "project_description": {
            "title": "Project Description",
            "description": "A longer description of the project, including the novelty and/or added value of the proposed work",
            "type": "string",
            "minLength": 100,
            "maxLength": 1500,
            "format": "textarea"
        },
        "links": {
            "title": "Project links",
            "description": "Links related to the project",
            "type": "array",
            "minItems": 1,
            "format": "table",
            "items": {
                "title": "Link",
                "type": "object",
                "required": ["url", "type"],
                "properties": {
                    "url": {
                        "title": "Link URL",
                        "description": "A related resolvable URL",
                        "type": "string",
                        "format": "uri"
                    },
                    "type": {
                        "$ref": "https://e-rihs.io/schema/controlled_lists.schema.json#/definitions/link_type"
                    }
                }
            }
        },
        "contacts": {
            "title": "Project Contacts",
            "description": "Contacts related to the project",
            "type": "array",
            "minItems": 1,
            "format": "table",
            "items": {
                "title": "Contact",
                "type": "object",
                "properties": {
                    "type": {
                        "$ref": "https://e-rihs.io/schema/controlled_lists.schema.json#/definitions/contact_option"
                    },
                    "contact": {
                        "title": "Contact",
                        "description": "E-mail or phone number",
                        "type": "string"
                    }
                }
            },
            "required": [
                "type",
                "contact"
            ]
        }
    }
}