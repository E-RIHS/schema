{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://e-rihs.io/schema/technique-v1.0.schema.json",
    "$code": "3cc2",
    "title": "Technique",
    "type": "object",
    "required": [
        "preferred_label"
    ],
    "properties": {
        "$schema": {
            "type": "string",
            "options": {
                "hidden": true
            }
        },
        "id": {
            "type": "string",
            "cordra": {
                "type": {
                    "autoGeneratedField": "handle"
                }
            }
        },
        "preferred_label": {
            "title": "Preferred label",
            "description": "Preferred label",
            "type": "string",
            "minLength": 1,
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "isPrimary": true
                }
            }
        },
        "definition": {
            "title": "Definition",
            "description": "Definition",
            "type": "string",
            "format": "textarea",
            "cordra": {
                "preview": {
                    "showInPreview": true
                }
            }
        },
        "alternative_labels": {
            "title": "Alternative labels",
            "description": "Alternative labels",
            "type": "array",
            "items": {
                "title": "Alternative label",
                "type": "string",
                "minLength": 1
            }
        },
        "narrower": {
            "title": "Narrower terms",
            "description": "Narrower",
            "type": "array",
            "items": {
                "title": "Narrower term",
                "type": "object",
                "required": [
                    "preferred_label"
                ],
                "properties": {
                    "e-rihs_vocab_id": {
                        "title": "e-rihs vocab id",
                        "type": "string",
                        "format": "uri"
                    },
                    "preferred_label": {
                        "title": "Preferred label",
                        "type": "string",
                        "minLength": 1
                    }
                }
            }
        },
        "broader": {
            "title": "Broader terms",
            "description": "Broader",
            "type": "array",
            "items": {
                "title": "Broader term",
                "type": "object",
                "required": [
                    "preferred_label"
                ],
                "properties": {
                    "e-rihs_vocab_id": {
                        "title": "e-rihs vocab id",
                        "type": "string",
                        "format": "uri"
                    },
                    "preferred_label": {
                        "title": "Preferred label",
                        "type": "string",
                        "minLength": 1
                    }
                }
            }
        },
        "e-rihs_vocab_id": {
            "title": "e-rihs vocab id",
            "description": "e-rihs vocab id",
            "$ref": "https://e-rihs.io/schema/controlled_lists.schema.json#/definitions/technique",
            "cordra": {
                "preview": {
                    "showInPreview": true
                }
            }
        },
        "e-rihs_vocab_json_url": {
            "title": "JSON URL",
            "description": "JSON URL",
            "type": "string",
            "format": "uri"
        },
        "measurable_properties": {
            "title": "Measurable properties",
            "description": "Measurable properties and materials that can be studied by this technique",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "title": "Measurable property",
                "type": "object",
                "required": ["class"],
                "properties": {
                    "class": {
                        "title": "Measurable property class",
                        "$ref": "https://e-rihs.io/schema/controlled_lists.schema.json#/definitions/measurable_property"
                    },
                    "materials": {
                        "title": "Materials",
                        "description": "Materials of which the selected measurable property can be studied. This field is connected to an extensive controlled list.",
                        "type": "array",
                        "items": {
                            "$ref": "https://e-rihs.io/schema/controlled_lists.schema.json#/definitions/material"
                        }
                    },
                    "materials_other": {
                        "title": "Other materials",
                        "description": "Other materials of which the selected measurable property can be studied (free text)",
                        "type": "array",
                        "items": {
                            "title": "Material",
                            "type": "string"
                        }
                    }
                }
            }
        },
        "example_outputs": {
            "title": "Example outputs",
            "description": "Example outputs",
            "type": "array",
            "items": {
                "title": "Example output",
                "type": "object",
                "required": ["pid"],
                "properties": {
                    "pid": {
                        "type": "string",
                        "format": "uri"
                    },
                    "comment": {
                        "title": "Comment",
                        "type": "string"
                    }
                }
            }
        },
        "reference": {
            "title": "Technique Reference",
            "description": "References to relevant publications, reports or other documents which help define, describe or demonstrate the relevant technique",
            "type": "array",
            "items": {
                "type": "object",
                "required": ["citation"],
                "properties": {
                    "reference": {
                        "title": "Citation",
                        "description": "A full text citation describing the relevant reference.",
                        "type": "string"
                    },
                    "url": {
                        "title": "URL",
                        "description": "URL",
                        "type": "string",
                        "format": "uri"
                    },
                    "reference role": {
                        "title": "Reference Roles",
                        "type": "array",
                        "items": {
                            "$ref": "https://e-rihs.io/schema/controlled_lists.schema.json#/definitions/reference_role"
                        }
                    }
                }
            }
        }
    }
}
