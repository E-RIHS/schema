{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://e-rihs.io/schema/technique-v1.0.schema.json",
    "$code": "3cc2",
    "title": "Technique",
    "type": "object",
    "required": [
        "preferred_label",
        "e-rihs_vocab_url",
        "short_description",
        "measurable_properties"
    ],
    "properties": {
        "$schema": {
            "type": "string",
            "options": {
                "hidden": true
            }
        },
        "id": {
            "type": "string",
            "cordra": {
                "type": {
                    "autoGeneratedField": "handle"
                }
            }
        },
        "preferred_label": {
            "title": "Preferred label",
            "description": "Preferred label",
            "type": "string",
            "minLength": 3,
            "maxLength": 100,
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "isPrimary": true
                }
            }
        },
        "e-rihs_vocab_url": {
            "title": "E-RIHS Vocabulary URL",
            "description": "E-RIHS Vocabulary will provide the core SKOS metadata for the given technique, specifically labels, scope notes and relationships to other techniques.",
            "type": "array",
            "items": {
                "type": "string",
                "format": "uri"
            }
        },
        "short_description": {
            "title": "Short Description",
            "description": "Short Description of how this technique is specifically relevant or used within Heritage Science, this can just be a summary of the full more generic scope note if appropriate.",
            "type": "string",
            "format": "textarea",
            "minLength": 3,
            "maxLength": 512,
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "excludeTitle": true
                }
            }
        },
        "measurable_properties": {
            "title": "Measurable properties",
            "description": "Measurable properties",
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "title": "Measurable property",
                "type": "object",
                "required": ["property"],
                "properties": {
                    "property": {
                        "title": "Property",
                        "type": "string",
                        "examples": [
                            "composition",
                            "width",
                            "thickness",
                            "colour",
                            "roughness",
                            "lifespan"
                        ]
                    },
                    "material_category": {
                        "title": "Material categories",
                        "type": "array",
                        "items": {
                            "title": "Material category",
                            "type": "string",
                            "examples": [
                                "wood",
                                "stone",
                                "glass",
                                "ceramics",
                                "canvas",
                                "paint"
                            ]
                        }
                    }
                }
            }
        },
        "example_outputs": {
            "title": "Example outputs",
            "description": "Example outputs",
            "type": "array",
            "items": {
                "title": "Example output",
                "type": "object",
                "required": ["pid"],
                "properties": {
                    "pid": {
                        "type": "string",
                        "format": "uri"
                    },
                    "comment": {
                        "title": "Comment",
                        "type": "string"
                    }
                }
            }
        },
        "reference": {
            "title": "Technique Reference",
            "description": "References to relevant publications, reports or other documents which help define, describe or demonstrate the relevant technique",
            "type": "array",
            "items": {
                "type": "object",
                "required": ["citation"],
                "properties": {
                    "reference": {
                        "title": "Citation",
                        "description": "A full text citation describing the relevant reference.",
                        "type": "string"
                    },
                    "url": {
                        "title": "URL",
                        "description": "URL",
                        "type": "string",
                        "format": "uri"
                    },
                    "reference role": {
                        "title": "Reference Role",
                        "type": "array",
                        "items": {
                            "title": "Role Type",
                            "type": "string",
                            "examples": [
                                "published examples",
                                "example report",
                                "further description"
                            ]
                        }
                    }
                }
            }
        }
    }
}
