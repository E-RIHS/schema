{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://e-rihs.io/schema/equipment-v1.0.schema.json",
    "$code": "01ba",
    "title": "Equipment",
    "type": "object",
    "required": [
        "name",
        "description",
        "output_data_types",
        "last_checked_date"
    ],
    "properties": {
        "$schema": {
            "type": "string",
            "options": {
                "hidden": true
            }
        },
        "id": {
            "type": "string",
            "cordra": {
                "type": {
                    "autoGeneratedField": "handle"
                }
            }
        },
        "name": {
            "title": "Name or Title",
            "description": "The simple name or title for the piece of equipment.",
            "type": "string",
            "minLength": 3,
            "maxLength": 100,
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "isPrimary": true
                }
            }
        },
        "description": {
            "title": "Description",
            "description": "A longer description of the equipment, or a reference to an external document.",
            "anyOf": [
                {
                    "title": "Reference to external documents",
                    "type": "object",
                    "properties": {
                        "citation": {
                            "title": "Citation",
                            "description": "The formatted details for the given reference.",
                            "type": "string"
                        },
                        "url": {
                            "title": "URL",
                            "description": "URL",
                            "type": "string",
                            "format": "uri"
                        }
                    }
                },
                {
                    "title": "Textual description",
                    "type": "string",
                    "format": "textarea"
                }
            ]
        },
        "has_defined_components": {
            "title": "Has defined components",
            "description": "Other tools that are components of this tool",
            "type": "array",
            "items": {
                "title": "Component",
                "type": "object",
                "properties": {
                    "component_type": {
                        "$ref": "https://e-rihs.io/schema/example_lists.schema.json#/definitions/equipment_component_type"
                    },
                    "tool": {
                        "title": "Component (equipment or software)",
                        "type": "string",
                        "description": "The discrete component of the equipment. This is a reference to another equipment or software object that was previously defined.",
                        "cordra": {
                            "type": {
                                "handleReference": {
                                    "types": ["Equipment", "Software"]
                                }
                            }
                        }
                    }
                }
            }
        },
        "output_data_types": {
            "title": "Output data types",
            "description": "The type of output data that the equipment creates.  This dropdown list gives a few examples, but if required,you can enter a different value here.",
            "type": "array",
            "minItems": 1,
            "items": {
                "title": "Output data type",
                "$ref": "https://e-rihs.io/schema/example_lists.schema.json#/definitions/data_type"
            }
        },
        "last_checked_date": {
            "title": "Last Checked date",
            "description": "For hardware tools the last checked date relates to when equipment was last tested or callibrated, to confirm that it is working and performing as designed.",
            "type": "string",
            "format": "date"
        },
        "has_url": {
            "title": "Has link",
            "description": "Links to the software website or documentation",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "link_type": {
                        "$ref": "https://e-rihs.io/schema/controlled_lists.schema.json#/definitions/link_type"
                    },
                    "url": {
                        "title": "Link",
                        "type": "string",
                        "format": "uri"
                    }
                }
            }
        },
        "acquisition_areas": {
            "title": "Acquisition/target areas",
            "description": "The areas of the object or sample that can be examined by the equipment. This dropdown list gives a few examples, but if required, you can enter a different value here depending on the equipment.",
            "type": "array",
            "items": {
                "type": "string",
                "cordra": {
                    "type": {
                        "suggestedVocabulary": [
                            "small spot",
                            "large spot",
                            "micro",
                            "macro",
                            "large area"
                        ]
                    }
                }
            }
        },
        "object_impact": {
            "title": "Impact on object or sample",
            "description": "The impact of the equipment on the object being examined",
            "type": "array",
            "items": {
                "$ref": "https://e-rihs.io/schema/controlled_lists.schema.json#/definitions/object_impact"
            }
        },
        "working_distances": {
            "title": "Working distances",
            "description": "A classification of the distance between the equipment and the object being examined.",
            "type": "array",
            "items": {
                "$ref": "https://e-rihs.io/schema/controlled_lists.schema.json#/definitions/working_distance"
            }
        },
        "manufacturer": {
            "title": "Manufacturer",
            "description": "Manufacturer of the equipment",
            "type": "string"
        },
        "model": {
            "title": "Model",
            "description": "Model or version of the equipment",
            "type": "string"
        },
        "serial_number": {
            "title": "Serial number",
            "description": "Serial number of the equipment",
            "type": "string"
        },
        "callibration": {
            "title": "Last callibrated",
            "description": "Date when the equipment was last callibrated.",
            "type": "string",
            "format": "date"
        }
    }
}
