{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://e-rihs.io/schema/kpi-v0.4.schema.json",
    "title": "E-RIHS KPI",
    "type": "object",
    "required": [
        "id",
        "title"
    ],
    "properties": {
        "id": {
            "title": "E-RIHS PID",
            "type": "string",
            "cordra": {
                "type": {
                    "autoGeneratedField": "handle"
                }
            }
        },
        "title": {
            "title": "Title",
            "type": "string",
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "isPrimary": true
                }
            }
        },
        "kpi_definition": {
            "title": "KPI definition",
            "type": "string",
            "description": "E-RIHS PID of the KPI definition that is used for this KPI.",
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "isPrimary": true
                },
                "type": {
                    "handleReference": {
                        "types": [
                            "https://e-rihs.io/schema/kpi-definition-v0.4.schema.json"
                        ],
                        "name": "{{../title}}"
                    }
                }
            }
        },
        "date_range": {
            "title": "Date range",
            "type": "object",
            "description": "The date range the KPI is relevant to.",
            "properties": {
                "start_date": {
                    "title": "Start date and time",
                    "type": "string",
                    "format": "date-time",
                    "description": "The start date of the date range the KPI is relevant to."
                },
                "end_date": {
                    "title": "End date and time",
                    "type": "string",
                    "format": "date-time",
                    "description": "The end date of the date range the KPI is relevant to."
                }
            }
        },
        "metrics": {
            "title": "Metrics",
            "type": "array",
            "description": "Measured metrics for the KPI.",
            "items": {
                "type": "object",
                "required": [
                    "key",
                    "value"
                ],
                "properties": {
                    "key": {
                        "title": "Key",
                        "type": "string",
                        "description": "The key of the metric"
                    },
                    "value": {
                        "title": "Value",
                        "description": "The value of the metric"
                    },
                    "met_target": {
                        "title": "Met target",
                        "type": "boolean",
                        "description": "Whether the target for the metric was met"
                    }
                }
            }
        }
    }
}