{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://e-rihs.io/schema/catalogue_proposal_review-v1.0.schema.json",
    "$code": "f1ab",
    "title": "Catalogue Proposal Review",
    "type": "object",
    "required": ["label", "catalogue_proposal", "reviewed_by", "status"],
    "properties": {
        "$schema": {
            "type": "string",
            "options": {
                "hidden": true
            }
        },
        "id": {
            "type": "string",
            "cordra": {
                "type": {
                    "autoGeneratedField": "handle"
                }
            }
        },
        "label": {
            "type": "string",
            "title": "Label",
            "minLength": 3,
            "maxLength": 100,
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "isPrimary": true
                }
            }
        },
        "catalogue_proposal": {
            "title": "Catalogue Proposal",
            "description": "The catalogue proposal that is being reviewed",
            "type": "string",
            "cordra": {
                "type": {
                    "handleReference": {
                        "types": ["Catalogue Proposal"]
                    }
                }
            } 
        },       
        "reviewed_by": {
            "title": "Reviewed by",
            "description": "The person or organisation that reviewed the proposal",
            "type": "string",
            "cordra": {
                "type": {
                    "handleReference": {
                        "types": ["Person", "Organisation"]
                    }
                }
            }
        },
        "feedback": {
            "title": "Feedback",
            "description": "Feedback from the proposal",
            "type": "string",
            "format": "textarea"
        },
        "status": {
            "$ref": "https://e-rihs.io/schema/controlled_lists.schema.json#/definitions/review_status"
        },
        "submitted_date": {
            "title": "Submitted Date",
            "description": "When was the proposal submitted",
            "type": "string",
            "format": "date",
            "cordra": {
                "preview": {
                    "showInPreview": true
                }
            }
        }
    }
}