{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://e-rihs.io/schema/software-v1.0.schema.json",
    "$code": "8e92",
    "title": "Software",
    "type": "object",
    "required": [
        "name",
        "description",
        "output_data_types",
        "last_checked_date"
    ],
    "properties": {
        "$schema": {
            "type": "string",
            "options": {
                "hidden": true
            }
        },
        "id": {
            "type": "string",
            "cordra": {
                "type": {
                    "autoGeneratedField": "handle"
                }
            }
        },
        "name": {
            "title": "Name or Title",
            "description": "The simple name or title for the piece of software.",
            "type": "string",
            "minLength": 3,
            "maxLength": 100,
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "isPrimary": true
                }
            }
        },
        "description": {
            "title": "Description",
            "description": "A longer description of the software, or a reference to an external document.",
            "anyOf": [
                {
                    "title": "Reference to external documents",
                    "type": "object",
                    "properties": {
                        "citation": {
                            "title": "Citation",
                            "description": "The formatted details for the given reference.",
                            "type": "string"
                        },
                        "url": {
                            "title": "URL",
                            "description": "URL",
                            "type": "string",
                            "format": "uri"
                        }
                    }
                },
                {
                    "title": "Textual description",
                    "type": "string",
                    "format": "textarea"
                }
            ]
        },
        "has_defined_components": {
            "title": "Has defined components",
            "description": "Other tools that are components of this tool",
            "type": "array",
            "items": {
                "title": "Component",
                "type": "object",
                "properties": {
                    "component_type": {
                        "title": "Component type",
                        "type": "string",
                        "description": "The function of the software component in the equipment or software suite. This dropdown list gives a few examples, but if required, you can define your own component type here.",
                        "cordra": {
                            "type": {
                                "suggestedVocabulary": [
                                    "Data acquisition",
                                    "Data processing",
                                    "Data visualisation"
                                ]
                            }
                        }
                    },
                    "tool": {
                        "title": "Component (equipment or software",
                        "type": "string",
                        "description": "The discrete component of the software suite. This is a reference to another equipment or software object that was previously defined.",
                        "cordra": {
                            "type": {
                                "handleReference": {
                                    "types": ["Equipment", "Software"]
                                }
                            }
                        }
                    }
                }
            }
        },
        "input_data_types": {
            "title": "Input data types",
            "description": "The type of input data that the software requires.  This dropdown list gives a few examples, but if required, you can enter a different value here.",
            "type": "array",
            "minItems": 1,
            "items": {
                "title": "Input data type",
                "type": "string",
                "cordra": {
                    "type": {
                        "suggestedVocabulary": [
                            "Image",
                            "Image/RGB",
                            "Image/Gray scale",
                            "Image/Multi band image",
                            "Image/False color",
                            "Image/Drawing",
                            "Image/Figure",
                            "Dataset",
                            "Dataset/2D",
                            "Dataset/3D",
                            "Dataset/Time series",
                            "Dataset/Data package (images, spectra, other)",
                            "Model",
                            "Model/3D",
                            "Report",
                            "Audio/video"
                        ]
                    }
                }
            }
        },
        "output_data_types": {
            "title": "Output data types",
            "description": "The type of output data that the software creates.  This dropdown list gives a few examples, but if required, you can enter a different value here.",
            "type": "array",
            "minItems": 1,
            "items": {
                "title": "Output data type",
                "type": "string",
                "cordra": {
                    "type": {
                        "suggestedVocabulary": [
                            "Image",
                            "Image/RGB",
                            "Image/Gray scale",
                            "Image/Multi band image",
                            "Image/False color",
                            "Image/Drawing",
                            "Image/Figure",
                            "Dataset",
                            "Dataset/2D",
                            "Dataset/3D",
                            "Dataset/Time series",
                            "Dataset/Data package (images, spectra, other)",
                            "Model",
                            "Model/3D",
                            "Report",
                            "Audio/video"
                        ]
                    }
                }
            }
        },
        "developer": {
            "title": "Developer",
            "description": "Developer (or current maintainer) of the software",
            "type": "string"
        },
        "licence": {
            "title": "Licence",
            "description": "Licence of the software",
            "type": "string",
            "format": "uri"
        },
        "version": {
            "title": "Version",
            "description": "Software version",
            "type": "string"
        },
        "release_date": {
            "title": "Release Date",
            "description": "When was the software tool first released or developed.",
            "type": "string",
            "format": "date"
        },
        "has_url": {
            "title": "Has link",
            "description": "Links to the software website or documentation",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "link_type": {
                        "title": "Type",
                        "description": "The type of link",
                        "type": "string",
                        "cordra": {
                            "type": {
                                "suggestedVocabulary": [
                                    "website",
                                    "documentation",
                                    "source code",
                                    "demo",
                                    "online resource",
                                    "other"
                                ]
                            }
                        }
                    },
                    "url": {
                        "title": "Link",
                        "type": "string",
                        "format": "uri"
                    }
                }
            }
        },
        "last_checked_date": {
            "title": "Last Checked Date",
            "description": "For software tools the last checked date relates to when the software was last confirmed to be working and performing as designed.",
            "type": "string",
            "format": "date"
        }
    }
}
