{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://e-rihs.io/schema/software-v1.0.schema.json",
    "$code": "8e92",
    "title": "Software",
    "type": "object",
    "required": [
        "name",
        "description",
        "output_data_type",
        "last_checked_date"
    ],
    "properties": {
        "$schema": {
            "type": "string",
            "options": {
                "hidden": true
            }
        },
        "id": {
            "type": "string",
            "cordra": {
                "type": {
                    "autoGeneratedField": "handle"
                }
            }
        },
        "name": {
            "title": "Name or Title",
            "description": "The simple name or title for the piece of software.",
            "type": "string",
            "minLength": 3,
            "maxLength": 100,
            "cordra": {
                "preview": {
                    "showInPreview": true,
                    "isPrimary": true
                }
            }
        },
        "description": {
            "title": "Description",
            "description": "A longer description of the software, or a reference to an external document.",
            "anyOf": [
                {
                    "title": "Reference to external documents",
                    "type": "object",
                    "properties": {
                        "citation": {
                            "title": "Citation",
                            "description": "The formatted details for the given reference.",
                            "type": "string"
                        },
                        "url": {
                            "title": "URL",
                            "description": "URL",
                            "type": "string",
                            "format": "uri"
                        }
                    }
                },
                {
                    "title": "Textual description",
                    "type": "string",
                    "format": "textarea"
                }
            ]
        },
        "has_defined_components": {
            "title": "Has defined components",
            "description": "Other tools that are components of this tool",
            "type": "array",
            "items": {
                "title": "Component",
                "type": "object",
                "properties": {
                    "component_type": {
                        "type": "string",
                        "description": "The type of component",
                        "examples": [
                            "Detector",
                            "Column",
                            "Camera"
                        ]
                    },
                    "tool": {
                        "type": "string",
                        "cordra": {
                            "type": {
                                "handleReference": {
                                    "types": ["Equipment", "Software"]
                                }
                            }
                        }
                    }
                }
            }
        },
        "output_data_type": {
            "title": "Output data type",
            "description": "The type of output data that the software creates",
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string",
                "examples": [
                    "X/Y data",
                    "X/Y/Z data",
                    "images",
                    "moving images"
                ]
            }
        },
        "release_date": {
            "title": "Release Date",
            "description": "When was the software tool first released or developed.",
            "type": "string",
            "format": "date"
        },
        "last_checked_date": {
            "title": "Last Checked Date",
            "description": "For software tools the last checked date relates to when the software was last confirmed to be working and performing as designed.",
            "type": "string",
            "format": "date"
        },
        "developer": {
            "title": "Developer",
            "description": "Developer (or current maintainer) of the software",
            "type": "string"
        },
        "licence": {
            "title": "Licence",
            "description": "Licence of the software",
            "type": "string",
            "format": "uri"
        },
        "has_url": {
            "title": "Has link",
            "description": "Links to the software website or documentation",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "link_type": {
                        "title": "Type",
                        "type": "string",
                        "enum": [
                            "website",
                            "documentation",
                            "source code",
                            "demo",
                            "online resource",
                            "other"
                        ]
                    },
                    "url": {
                        "title": "Link",
                        "type": "string",
                        "format": "uri"
                    }
                }
            }
        },
        "version": {
            "title": "Version",
            "description": "Software version",
            "type": "string"
        },
        "input_data_type": {
            "title": "Input data type",
            "description": "The type of input data that the software requires",
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string",
                "examples": [
                    "X/Y data",
                    "X/Y/Z data",
                    "images",
                    "moving images"
                ]
            }
        }
    }
}
